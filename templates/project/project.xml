<?xml version="1.0" encoding="utf-8"?>
<pickhaxe>
  <mod
    id="#{pickhaxe.mod.id}"
    version="#{pickhaxe.mod.version}"
    parentPackage="#{pickhaxe.mod.parentPackage}"
    classPath="./src/"
    resourcePath="./resources/"
  />

  <!-- CLIENT, SERVER, or * -->
  <mod-environment value="#{pickhaxe.mod.environment}" />

  <mod-entry-point value="#{pickhaxe.mod.entryPoint}" />

  <mod-metadata 
    name="#{pickhaxe.mod.name}"
    description="#{pickhaxe.mod.description}"
  />

  <!-- https://spdx.org/licenses/ -->
  <mod-license value="MIT" />
</pickhaxe>