<?xml version="1.0" encoding="utf-8"?>
<pickhaxe>
  <mod
    id="#{pickhaxe.mod.id}"
    version="#{pickhaxe.mod.version}"
    parentPackage="#{pickhaxe.mod.parentPackage}"
    classPath="./src/"
    resourcePath="./resources/"
  />

  <!-- An entry point can be CLIENT, SERVER, or *, defaulting to * (both) -->
  <mod-entry-point
    environment="#{pickhaxe.mod.entryPoint.init.environment}"
    value="#{pickhaxe.mod.entryPoint.init.value}"
  />

  <mod-metadata 
    name="#{pickhaxe.mod.name}"
    description="#{pickhaxe.mod.description}"
  />

  <!-- https://spdx.org/licenses/ -->
  <mod-license value="All Rights Reserved" />
</pickhaxe>